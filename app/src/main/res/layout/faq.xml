<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment acheter sur Mossosouk?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:padding="3dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pour acheter, il vous suffit de cliquer sur le produit qui vous interesse. Une autre page va s'ouvrir et vous montre des détails sur le produit. Ensuite, cliquez sur le bouton Acheter."
        android:textStyle="normal"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="3dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment vendre sur Mossosouk?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:padding="3dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pour vendre, il vous suffit de cliquer sur le produit qui vous interesse. Une autre page va s'ouvrir et vous montre des détails sur le produit. Ensuite, cliquez sur le bouton Acheter."
        android:textStyle="normal"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="3dp"/>
    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:id="@+id/comprisBtn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Compris"
        android:textColor="@android:color/white"
        android:padding="15dp"
        android:textStyle="normal|bold"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="comprisBtn"
        />

</LinearLayout>